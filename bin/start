#!/usr/bin/env ruby
require 'fileutils'

# Path to the application root.
APP_ROOT = File.expand_path('..', __dir__)

# We want to guard against failures at each stage of this
def system!(*args)
  system(*args) || abort("\n== Command #{args} failed ==")
end

FileUtils.chdir APP_ROOT do
  system! 'git fetch'
  system! 'git reset --hard origin/main'

  system! "bundle config set deployment 'true'"
  system! "bundle config set without 'development test'"
  system! "bundle check || bundle install"

  system! "bundle exec bin/manager"
end

require "bundler/setup"
$LOAD_PATH.unshift File.expand_path("../../lib", __FILE__)

require "tooling_manager"

puts "Starting Tooling Manager"
STDOUT.flush
ToolingManager::Manage.()

if Dir.exists?("/home/exercism")
  File.write("/home/exercism/.tooling-manager-ready", "Let's gooooooo!")
end
